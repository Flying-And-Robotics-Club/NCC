<p id="notice"><%= notice %></p>

<h1>Testimonials</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Facebook</th>
      <th>Linkedin</th>
      <th>Instagram</th>
      <th>Email</th>
      <th>Statement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testimonials.each do |testimonial| %>
      <tr>
        <td><%= testimonial.name %></td>
        <td><%= testimonial.phone %></td>
        <td><%= testimonial.facebook %></td>
        <td><%= testimonial.linkedin %></td>
        <td><%= testimonial.instagram %></td>
        <td><%= testimonial.email %></td>
        <td><%= testimonial.statement %></td>
        <td><%= link_to 'Show', testimonial %></td>
        <td><%= link_to 'Edit', edit_testimonial_path(testimonial) %></td>
        <td><%= link_to 'Destroy', testimonial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Testimonial', new_testimonial_path %>
